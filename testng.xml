<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="MyShopTestSuite" verbose="1" parallel="tests">
    <test name="Demo Tests using TestNG in Chrome" >
        <parameter name="browser" value="chrome"></parameter>
        <parameter name="os" value="windows"></parameter>
        <classes>
            <class name="com.qaguru.demo.LoginTests" />
            <class name="com.qaguru.demo.ShoppingTests" />
        </classes>
    </test>

    <test name="Demo Tests using TestNG in Firefox-OSx" >
        <parameter name="browser" value="firefox"></parameter>
        <parameter name="os" value="OSx"></parameter>
        <classes>
            <class name="com.qaguru.demo.LoginTests" />
            <class name="com.qaguru.demo.ShoppingTests" />
        </classes>
    </test>

</suite>
